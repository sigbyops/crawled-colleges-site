<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="search">
	<%= form_tag users_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search], placeholder: "Search for a user..." %>
			<%= submit_tag "Search", :name => nil, class: "btn btn-large btn-primary" %>
	<% end %>
</div>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
