<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h2><%= @user.high_school %></h2>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
    	<%= render 'follow_form' if signed_in? %>
    </section>
  </aside>
  
  <div class="span8">
  	<% if @user.microposts.any? %>
  		<h3>Wall (<%= @user.microposts.count %>)</h3>
  		<ol class="microposts">
  			<%= render @microposts %>
  		</ol>
  		<%= will_paginate @microposts %>
  	<% end -%>
  </div>
</div>
